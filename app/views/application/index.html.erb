<%= render 'partials/hero' %>

<% if @document['homepage.main_image'] %>
    <div id="main-image">
      <style type="text/css">
          @media (min-width: 993px) {
              #main-image {
                  background-image: url('<%= @document['homepage.main_image'].get_view('large').url %>')
              }
          }

          @media (max-width: 992px) and (min-width: 768px) {
              #main-image {
                  background-image: url('<%= @document['homepage.main_image'].get_view('medium').url %>')
              }
          }

          @media (max-width: 767px) {
              #main-image {
                  background-image: url('<%= @document['homepage.main_image'].get_view('small').url %>')
              }
          }
      </style>
    </div>
<% end %>

