<%= render 'partials/hero' %>

<% if @document['homepage.main_image'] %>
    <div id="main-image">
      <style type="text/css">
          @media (min-width: 993px) {
              #main-image {
                  background-image: url('<%= @document['homepage.main_image'].get_view('large').url %>')
              }
          }

          @media (max-width: 992px) and (min-width: 768px) {
              #main-image {
                  background-image: url('<%= @document['homepage.main_image'].get_view('medium').url %>')
              }
          }

          @media (max-width: 767px) {
              #main-image {
                  background-image: url('<%= @document['homepage.main_image'].get_view('small').url %>')
              }
          }
      </style>
    </div>
<% end %>

<ul class="bullets">
  <% @features.each do |feature| %>
      <%= cell(:feature, feature).call %>
  <% end %>
</ul>
<hr>

<div class="scroll-on-page">
  <aside id="scroll-on-page-top">
    <% @articles.each do |article| %>
        <% if cell(:article, article) %>
            <a class="scroll-on-page-link" href="#scroll-link-1">First Link</a>
        <% end %>
    <% end %>
  </aside>

  <article>
    <% @articles.each do |article| %>
        <% if cell(:article, article) %>
            <section>
              <h4 id="scroll-link-1">First Target</h4>
              <%= cell(:article, article).call %>
            </section>
        <% end %>
    <% end %>
    <a class="scroll-on-page-link" href="#scroll-on-page-top">Back to top</a>
  </article>
</div>

